# Maintainer: Lubosz Sarnecki <lubosz@gmail.com>

pkgname=gnome-software
pkgver=3.11.90
pkgrel=1
pkgdesc="GNOME Software Tools"
arch=('i686' 'x86_64')
depends=('glib2' 'gsettings-desktop-schemas' 'gtk3' 'libnotify' 'libsoup' 'sqlite' 'packagekit')
makedepends=('intltool' 'gtk-doc' 'itstool')
groups=('gnome')
license=('GPL')
options=('!emptydirs')
url="https://wiki.gnome.org/Apps/Software"
install=gnome-software.install
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz)
sha256sums=('17736479b7d0b1128c7d6cb3073f2b09e4bbc82670731b2a0d3a3219a520f816')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc \
      --localstatedir=/var --disable-static
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
